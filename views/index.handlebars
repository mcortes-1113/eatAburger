<div class="container" id="mainWrapper">

  <div class="row">
    <div class="col-md-12">
      <h1>Burger Eater!</h1>
    </div>
  </div>

    <div class="row">
      <div class="col-md-9 offset-3">
        <h3>Add a Burger</h3> 
          <form class="create-form">
            <div class="form-group">
              <span>
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca">
                <button type="submit">Add Burger</button>
              </span>
              </div>
            </form>
        </div>
    </div>
  
      <div class="row">            
        <div class="col-md-5">
          <h3>Burgers ready to be devoured!</h3>
            <ul>
              {{#each burgers}}
                {{#unless devoured}}
                  <li>
                    <span>
                      {{this.id}}. {{this.burger_name}}
                      <button class="change-devoured" data-id="{{id}}" data-newDevoured="{{1}}">
                        Devour it!
                      </button>
                    </span>
                  </li>
                {{/unless}}
              {{/each}}
            </ul>
      </div>

        <div class="col-md-5 offset-2">
          <h3>Burgers devoured!</h3>
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  <li>
                    <span>{{this.id}}. {{this.burger_name}}</span>
                  </li>
                {{/if}}
              {{/each}}
            </ul>
        </div>

</div>