<h1>Burger Eater!</h1>

<h2>Burgers ready to be devoured!</h2>

<ul>
  {{#each burgers}}
      {{#unless devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
      </p>
    </li>
	<button class="change-devoured" data-id="{{id}}" data-newDevoured="{{1}}">
    Devour it!
	</button>
      {{/unless}}
  {{/each}}
</ul>


<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca">
    {{!-- <input type="text" id="ca" name="burger_name"> --}}
  </div>
  <button type="submit">Add Burger</button>
</form>